# Flask App Config
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your_secret_key_here

# Database (NeonDB for Appointment Booking)
DATABASE_URL=postgresql://neondb_owner:<your_password>@ep-xxxxxxx-pooler.us-east-2.aws.neon.tech/neondb?sslmode=require

# ML Model Hosting (Cloudflare Workers)
ML_MODEL_API_URL=https://your-cloudflare-workers-url.workers.dev/predict

# Medical Records & Image Storage (Backblaze B2)
B2_BUCKET_NAME=your_bucket_name
B2_APP_KEY_ID=your_key_id
B2_APP_KEY_SECRET=your_key_secret
B2_ENDPOINT=https://s3.us-west-002.backblazeb2.com

# Cloudflare Worker Auth (if required)
CLOUDFLARE_AUTH_TOKEN=your_cloudflare_token

# Other Configurations
DEBUG=False
